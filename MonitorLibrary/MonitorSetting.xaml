<Window x:Class="MonitorLibrary.MonitorSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitorLibrary"
        mc:Ignorable="d"
   Title="SystemInfo" Height="200" Width="300" Topmost="True" WindowStyle="None" ResizeMode="NoResize"  AllowsTransparency="True" Background="Transparent" OpacityMask="White" >
    <Grid Background="Transparent">
        <Border BorderThickness="1" BorderBrush="#332C80E6"  CornerRadius="6" Background="#CCFDFDFD">
            <Grid>
                <Label Margin="58,61,173,108"  Content="字体颜色: " Foreground="#FF1B1B1B"/>
                <Label x:Name="Err" Margin="122,84,54,87"  Content="" Foreground="red" FontSize="10"/>
                <TextBox x:Name="taskFontColor" HorizontalAlignment="Left" Height="20" Margin="122,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="122">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Button Content="关闭" HorizontalAlignment="Left" Margin="58,159,0,0" VerticalAlignment="Top" Width="61" Height="20" Background="#CC0875E2" Foreground="White" BorderBrush="#00707070" RenderTransformOrigin="-1.724,4.368" Click="Button_Click_1">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderThickness="1"  CornerRadius="3" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="SettingFontColor" Content="设置" HorizontalAlignment="Left" Margin="191,159,0,0" VerticalAlignment="Top" Width="66" Background="#FFFF2323" Foreground="White" BorderBrush="#00707070" Click="SettingFontColor_Click" Height="20">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderThickness="1"  CornerRadius="3" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>

</Window>
